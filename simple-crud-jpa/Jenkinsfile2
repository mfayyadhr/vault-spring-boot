pipeline {
    agent any
    
    environment {
        // Ambil dari Jenkins credentials dengan ID: dockerhub-creds
        DOCKER_USERNAME = credentials('dockerhub-username')
        DOCKER_PASSWORD = credentials('dockerhub-password')
    }
    
    stages {
        stage("Checkout") {
            steps {
                git branch: "main", url: "https://github.com/mfayyadhr/vault-spring-boot.git"
            }
        }
        
        stage("Build & Package") {
            steps {
                dir('simple-crud-jpa'){
                    sh 'mvn clean package -DskipTests'
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                dir('simple-crud-jpa'){
                    sh 'docker build -t mfayyadhr/simple-crud-jpa:latest .'
                }
            }
        }
        
        stage('Push Docker Image') {
            steps{
                sh '''
                    docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD
                    docker push mfayyadhr/simple-crud-jpa:latest
                    docker logout
                '''
            }
        }
        
        stage('Deploy via Ansible'){
            steps{
                echo 'Deploying application on target server via Ansible....'
                sh '''
                    ansible-playbook -i /home/jenkins/ansible/inventories/inventory.ini /home/jenkins/ansible/playbooks/deploy-simple-crud-jpa.yml \
                    --extra-vars "image=mfayyadhr/simple-crud-jpa:latest"
                '''
            }
        }
    }
    
    post {
        success {
            echo 'Deployment successful ✅'
        }
        failure {
            echo 'Deployment failed ❌'
        }
    }
}
